{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build task",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/OlympMil2022.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "delete checker db",
            "command": "rm",
            "type": "process",
            "args": [
                "-f",
                "${workspaceFolder}/src/checker/checker/bd.db"
            ]
        }
    ]
}
